<div class="container">
    <h3>
      Publicar em <a href="/{{nome}}">{{user}}</a>
    </h3>
  <hr>

  <form action="/publicar/conteudo" method="post" class="container">
    <div class="mb-3">
      <label for="assunto" class="form-label">Titulo <strong class="text-danger">*</strong></label>
      <input type="text" class="form-control" id="assunto" name="titulo" placeholder="Você sabe porquê os Arrays Começam sempre do Índice 0?" required>
    </div>
    <div class="mb-3">
      <label for="conteudo" class="form-label">Conteúdo <strong class="text-danger">*</strong></label>
      <textarea class="form-control" id="conteudo" name="conteudo" rows="5" style="height: 144px; resize: none;" required></textarea>
    </div>
    <div class="mb-3">
      <label for="fonte" class="form-label">Fonte</label>
      <input type="url" class="form-control" id="fonte" name="fonte" placeholder="https://exemplo.com.br/pagina/1">
    </div>
    <div class="mb-3 d-grid gap-2">
      <button type="submit" class="btn btn-success">
        <i>Publicar</i>
      </button>
    </div>
  </form>
</div>